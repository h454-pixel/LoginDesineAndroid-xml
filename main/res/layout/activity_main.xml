<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7452AF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_1"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/desine"
        ></androidx.appcompat.widget.SearchView>

       <TextView
           android:id="@+id/Txt_view"
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:text="MYJIO MINI APPS"
           android:gravity="center"
           android:textSize="15dp"
           android:layout_marginTop="10dp"
           android:textColor="@color/white"
           android:layout_below="@+id/search_view_1"
           ></TextView>

  <ImageView
      android:id="@+id/img_home"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@mipmap/ic_launcher_round"
      android:layout_marginTop="25dp"
      android:layout_marginLeft="40dp"
      android:layout_below="@id/Txt_view"
      ></ImageView>

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_home"
        android:layout_alignRight="@id/img_home"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="Home"
        android:textColor="@color/white"></TextView>



    <ImageView
        android:id="@+id/img_mobile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/img_home"
        android:layout_below="@id/Txt_view"
        ></ImageView>

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mobile"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_home"
        android:text="phone"
        android:textColor="@color/white"></TextView>




    <ImageView
        android:id="@+id/img_fiber"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/img_mobile"
        android:layout_below="@id/Txt_view"
        ></ImageView>

    <TextView
        android:id="@+id/txt_fiber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mobile"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_mobile"
        android:text="fiber"
        android:textColor="@color/white"></TextView>




    <ImageView
        android:id="@+id/img_Jio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/img_fiber"
        android:layout_below="@id/Txt_view"
        ></ImageView>

    <TextView
        android:id="@+id/txt_jiocinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_mobile"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_fiber"
        android:text="jioCinema"
        android:textColor="@color/white"></TextView>



    <ImageView
        android:id="@+id/img_JioHelth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/txt_home"
        ></ImageView>

    <TextView
        android:id="@+id/txt_Jiohealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_JioHelth"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="jioCinema"
        android:textColor="@color/white"></TextView>




    <ImageView
        android:id="@+id/img_upi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/img_JioHelth"
        android:layout_below="@id/txt_mobile"
        ></ImageView>

    <TextView
        android:id="@+id/txt_upi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_upi"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_Jiohealth"
        android:text="Upi"
        android:textColor="@color/white"></TextView>


    <ImageView
        android:id="@+id/img_jiomart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/img_upi"
        android:layout_below="@id/txt_fiber"
        ></ImageView>

    <TextView
        android:id="@+id/txt_jiomart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_upi"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_upi"
        android:text="Jiomart"
        android:textColor="@color/white"></TextView>



    <ImageView
        android:id="@+id/img_jiosaavan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/img_jiomart"
        android:layout_below="@id/txt_jiocinema"
        ></ImageView>

    <TextView
        android:id="@+id/txt_jiosaavan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_jiosaavan"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_jiomart"
        android:text="JioSaavan"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/Txt_jioapps"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="JIO APPS"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_jiomart"
        ></TextView>


  <LinearLayout
      android:id="@+id/layout_1"
      android:layout_marginLeft="8dp"
      android:layout_width="wrap_content"
      android:layout_height="80dp"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      android:background="@drawable/desine"

      android:layout_below="@id/Txt_jioapps"
      >

      <ImageView
          android:id="@+id/img_jiosaavan2"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_below="@id/txt_fiber"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="12dp"
          android:src="@mipmap/ic_launcher_round"></ImageView>

      <TextView
          android:id="@+id/txt_jiosaavan2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/img_upi"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="10dp"
          android:layout_gravity="center"
          android:layout_toRightOf="@+id/txt_upi"
          android:text="Jiosaavan"
          android:textColor="@color/white"></TextView>



      <ImageView
          android:id="@+id/img_jiosaava2_ic"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@mipmap/ic_launcher_round"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="10dp"
          android:layout_toRightOf="@id/img_jiomart"
          android:layout_below="@id/txt_jiocinema"
          ></ImageView>





  </LinearLayout>



    <LinearLayout
        android:layout_toRightOf="@+id/layout_1"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:background="@drawable/desine"
        android:layout_below="@id/Txt_jioapps"

        >

        <ImageView
            android:id="@+id/img_jiomart2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/txt_fiber"
            ></ImageView>

        <TextView
            android:id="@+id/txt_jiomart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_upi"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/txt_upi"
            android:text="Jiomart"
            android:textColor="@color/white"></TextView>



        <ImageView
            android:id="@+id/img_jiomart2_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/img_jiomart"
            android:layout_below="@id/txt_jiocinema"
            ></ImageView>
    </LinearLayout>

</RelativeLayout>