<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/txt_getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register here"
        android:textColor="@color/black"
        android:textStyle="bold"
       android:gravity="center"
        android:textSize="30dp"></TextView>




    <EditText
        android:id="@+id/ed_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"
        android:hint="User name"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/desine_3"
        ></EditText>

    <EditText
        android:id="@+id/ed_txt_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/desine_3"
        ></EditText>

    <EditText
        android:id="@+id/ed_txt_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_baseline_phone_android_24"
        android:hint="Phone"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/desine_3"
        ></EditText>


    <EditText
        android:id="@+id/ed_txt_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_baseline_lock_open_24"
        android:hint="password"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:paddingEnd="10dp"
        android:background="@drawable/desine_3"
        ></EditText>

    <EditText
        android:id="@+id/ed_txt_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableRight="@drawable/ic_baseline_lock_open_24"
        android:hint="Confirm password"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/desine_3"
        ></EditText>


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tbtn_login"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/desine"
        android:gravity="center"
        android:text="Register "
        android:textColor="@color/white"
        android:textSize="20dp"

        ></TextView>


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/txt_already"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login here "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"

        android:gravity="center">
    </TextView>

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_wave_haikei__1_"
        />



</LinearLayout>